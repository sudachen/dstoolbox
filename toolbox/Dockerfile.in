FROM sudachen/jupyter_jx:latest

#sudachen/jupyter:latest       - Python3 
#sudachen/jupyter_j:latest     - Python3 and Julia
#sudachen/jupyter_jx:latest    - Python3, Julia, beakerx[Scala,SQL]
#sudachen/jupyter_jx2:latest    - Python3, Julia, beakerx[Scala,SQL], Python2
#sudachen/jupyter_jx2r:latest    - Python3, Julia, beakerx[Scala,SQL], Python2, R
#sudachen/jupyter_jx2r:latest    - Python3, Julia, beakerx[Scala,SQL], Python2, R, Go

USER root
ADD jupyter_notebook_config.py /etc/jupyter/
ADD setup_kernel.py $HOME/.ipython/profile_default/startup/setup_kernel.py
RUN fix-permissions /etc/jupyter/ \
    && fix-permissions ${HOME}/.ipython 

USER $NB_USER

ENV DATABASE_URL=sqlite:// \
    GITHUB_ACCESS_TOKEN=NONE

RUN pip install -U --no-cache-dir git+git://github.com/sudachen/ipython-sql@master \
    && conda clean -tipsy \
    && fix-permissions ${CONDA_DIR} \
    && fix-permissions ${HOME}

